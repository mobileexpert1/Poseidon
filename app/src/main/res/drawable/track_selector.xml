<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_checked="true">
        <shape android:dither="true"
            android:shape="rectangle" android:useLevel="false"
            android:visible="true">
            <solid android:color="@color/green" />
            <corners android:radius="@dimen/_40sdp"  />
            <padding
                android:left="@dimen/_2sdp"
                android:right="@dimen/_3sdp"
                android:top="@dimen/_6sdp"
                android:bottom="@dimen/_6sdp" />
            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/green" />
            <size android:width="@dimen/_1sdp" android:height="@dimen/_15sdp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle"
            android:useLevel="false" android:visible="true">
            <corners android:radius="@dimen/_40sdp" />
            <solid android:color="@color/Black" />
            <padding
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:top="@dimen/_6sdp"
                android:bottom="@dimen/_6sdp" />
            <size android:width="@dimen/_1sdp" android:height="@dimen/_15sdp" />
            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/Black" />
        </shape>
    </item>
</selector>