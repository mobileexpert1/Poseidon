<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/rlTop"
    android:layout_marginTop="@dimen/_100sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:background="@drawable/drawable_password"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:layout_height="@dimen/_280sdp">

            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_6sdp">
                <TextView
                    android:id="@+id/tvoldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oldpassword"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sdp"/>
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:textColor="@color/grey"
                    android:singleLine="true"
                    android:layout_below="@+id/tvoldPassword"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/drawable_password"
                    android:padding="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/tvNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_password"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_below="@+id/etPassword"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sdp"/>
                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:layout_below="@+id/tvNewPassword"
                    android:textColor="@color/grey"
                    android:singleLine="true"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/drawable_password"
                    android:padding="@dimen/_10sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etNewPassword"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:weightSum="2"
                    tools:ignore="NotSibling">

                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/changepasswordbg"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/cancel_"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/poppins_medium"
                        />
                    <TextView
                        android:id="@+id/tvSave"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/changepasswordbg"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/save"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium" />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>