<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addlaborpopup"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_local_recipient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/round_edges"
        android:layout_gravity="center"
        android:layout_margin="20dp">
        <!--   android:windowCloseOnTouchOutside="true"
           android:windowContentOverlay="@null"-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:layout_marginTop="20dp"
                    android:text="LABOR CHARGES"
                    android:textSize="20sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="65dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="150dp"
                    android:background="@color/line_blue" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Hours"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/hoursET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_shape_input_text"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@1234567890.#$%&amp;amp!;*"
                    android:hint=""
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingVertical="9dp"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Labor"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    />

                <!-- <TextView
                     android:id="@+id/materialTV"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:background="@drawable/custom_shape_input_text"
                     android:hint=""
                     android:textSize="15sp"
                     android:fontFamily="@font/latosemibold"
                     android:textColor="@color/black"
                     android:imeOptions="actionDone"
                     android:maxLines="1"
                     android:padding="9dp"
                     android:singleLine="true" />-->



                <Spinner
                    android:id="@+id/laborSP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:layout_marginTop="4dp"
                    android:hint=""
                    android:textSize="15sp"
                    android:background="@drawable/custom_shape_input_text"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:singleLine="true"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Price"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/priceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_shape_input_text"
                    android:hint=""
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingVertical="9dp"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Amount"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/amountTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_shape_input_text"
                    android:hint=""
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingVertical="9dp"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/addlaborppTV"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons_background"
                    android:fontFamily="@font/latosemibold"
                    android:gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:text="Add"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>