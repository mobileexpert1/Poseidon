<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addservicepopup"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_local_recipient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/round_edges"
        android:layout_gravity="center"
        android:layout_margin="20dp">
        <!--   android:windowCloseOnTouchOutside="true"
           android:windowContentOverlay="@null"-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/servicefireLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:layout_marginTop="20dp"
                    android:text="@string/SERVICE"
                    android:textSize="20sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/Black"/>

                <View
                    android:layout_width="65dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="150dp"
                    android:background="@color/line_blue" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/Fire_sprinkler_system"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/Black"
                    />
                <Spinner
                    android:id="@+id/firesprinklerSP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:hint=""
                    android:textSize="15sp"
                    android:background="@drawable/custom_shape_input_text"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/Black"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/firesprinklerSSTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"
                    android:textColor="@color/black"
                    />


                <LinearLayout
                    android:id="@+id/servicedescLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/Description"
                        android:textSize="15sp"
                        android:fontFamily="@font/latosemibold"
                        android:textColor="@color/Black"
                        />
                    <EditText
                        android:id="@+id/descriptionserviceET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="4"
                        android:padding="10dp"
                        android:gravity="start"
                        android:scrollbars="vertical"
                        android:background="@drawable/custom_shape_input_text"
                        android:hint=""
                        android:imeOptions="actionDone"
                        android:minLines="4"
                        android:textSize="15sp"
                        android:fontFamily="@font/latosemibold"
                        android:textColor="@color/Black"
                        />




                </LinearLayout>

                <TextView
                    android:id="@+id/addServiceppTV"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttons_background"
                    android:gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:text="@string/add"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="15sp"
                    android:fontFamily="@font/latosemibold"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>