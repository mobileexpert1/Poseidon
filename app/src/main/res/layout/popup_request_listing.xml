<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handleClick"
            type="com.poseidonapp.utils.HandleClickListener" />
    </data>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inspector_home_screen_shape"

            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/imgeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_110sdp"
                    android:background="@color/grey">

                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_placeholder" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/inspection_type"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popup_back_grey"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInspectionType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="Quarterly"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/user_name"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popup_back_grey"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="@string/user_name"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mobile_number"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popup_back_grey"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="@string/mobile_number"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/location"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popup_back_grey"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="@string/location"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/notes"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popup_back_grey"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <EditText
                            android:id="@+id/edtNotes"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:background="@null"
                            android:hint="@string/notes"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llAcceptReject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAccept"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/next_button_background"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center|center_vertical"
                            android:onClick="@{(view)->handleClick.onViewClick(view)}"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/accept"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tvReject"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/reject_button_shape"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center|center_vertical"
                            android:onClick="@{(view)->handleClick.onViewClick(view)}"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/reject"
                            android:textColor="#014CAD"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOnRouteAndMakeReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOnRoute"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/reject_button_shape"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center|center_vertical"
                            android:onClick="@{(view)->handleClick.onViewClick(view)}"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/onroute"
                            android:textColor="#014CAD"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tvRMakeReport"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/make_report_button"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center|center_vertical"
                            android:onClick="@{(view)->handleClick.onViewClick(view)}"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/make_report"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMakeReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/make_report_button"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|center_vertical"
                        android:onClick="@{(view)->handleClick.onViewClick(view)}"
                        android:paddingHorizontal="@dimen/_25sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/make_report"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>